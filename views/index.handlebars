<div class="container">
    <div class="row">
        <div class="col s12">
            <img src="assets/img/burger.png" alt="Smiley face" height="200px" width="200px">

        </div>
        <div class="col s12">
            <div class="card light-blue lighten-1 z-depth-2 order-size">
                <div class="card-content white-text">
                    <span class="card-title">
                        <p>Hungry For Burgers?</p>
                    </span>
                    <form class="container" action="/burgers" method="POST">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">local_dining</i>
                                <textarea id="icon_prefix2" class="materialize-textarea" name="burger_name"></textarea>
                                <label for="icon_prefix2">Order a Burger</label>
                                <button type="submit" class="waves-effect waves-light btn red z-depth-3"> Place Order</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    
        <div class="col s5 offset-s1">
            <div class="card light-blue lighten-1 z-depth-2 burger-size">
                <div class="card-content white-text"> 
                    <p>Ready to be Devoured!</p>
                </div>
            </div>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <div class="card light-blue lighten-1 z-depth-2 burger-size">
                            <div class="card-content white-text">
                            <td>
                                {{burger_name}}
                            </td>
                            <br>
                            <br>
                            <td>
                                <form action="/update/{{id}}" method="POST">
                                    <input type="hidden" name="devoured" value="true">
                                    <button class="waves-effect waves-light btn red z-depth-3" type="submit">Devour it!</button>
                                </form>
                            </td>
                            </div>
                        </div>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    
        <div class="col s5">
            <div class="card light-blue lighten-1 z-depth-2 burger-size">
                <div class="card-content white-text"> 
                    <p>Already Devoured!</p>
                </div>
            </div>
            
            <ul>
                {{#each burgers}} 
                    {{#if devoured}}
                        <div class="card light-blue lighten-1 z-depth-2 burger-size">
                            <div class="card-content white-text"> 
                                {{ burger_name }} 
                                <br>
                                <br>
                                <form action="/delete/{{id}}" method="POST">
                                    <button type="submit" class="waves-effect waves-light btn red z-depth-3">Clean Up!</button>
                                </form>
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
